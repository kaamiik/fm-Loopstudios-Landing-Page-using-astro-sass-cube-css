<style lang="scss">
  @use "../styles/abstracts/" as *;
  .nav {
    &__list {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: $size-4;

      @include mq(large) {
        flex-direction: row;
        gap: $size-8;
      }
    }

    &__link {
      position: relative;
      display: inline-block;
      color: $navigation-color;
      outline: 2px solid transparent;
      text-decoration: $navigation-link-text-decoration;

      &::after {
        content: "";
        position: absolute;
        bottom: -8px;
        left: 50%;
        transform: translateX(-50%);
        width: 0;
        height: 2px;
        background-color: $color-neutral-000;
        transition: width 270ms ease-in-out;
      }

      &:hover:not(:focus)::after {
        width: 24px;
      }

      &:focus {
        outline-color: rgb(72, 255, 0);
        outline-offset: 5px;
      }
    }
  }
</style>
