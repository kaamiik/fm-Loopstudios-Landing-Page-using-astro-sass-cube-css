---
import PrimaryNavigation from "./PrimaryNavigation.astro";
---

<header class="site-header">
  <div class="container">
    <div class="site-header__inner">
      <a class="site-header__link" href="/index.html">
        <img
          class="site-header__logo"
          aria-hidden="true"
          src="/assets/images/logo.svg"
          alt=""
        />
        <p class="visually-hidden">LOOPSTUDIOS HOME</p>
      </a>

      <PrimaryNavigation />
    </div>
  </div>
</header>

<style lang="scss">
  @use "../styles/abstracts" as *;

  .site-header {
    color: $site-header-color;
    background-color: $site-header-background-color;
    padding: $site-header-padding;

    @include mq(medium) {
      padding: $site-header-padding-desktop;
    }

    &__inner {
      display: flex;
      gap: $size-4;
      align-items: $site-header-alignment;
      justify-content: $site-header-jusitifcation-small-screens;

      @include mq(medium) {
        justify-content: $site-header-jusitifcation-large-screens;
      }
    }

    &__link {
      position: relative;
      display: inline-block;
      outline: 2px solid transparent;

      &::after {
        content: "";
        position: absolute;
        bottom: -8px;
        left: 50%;
        transform: translateX(-50%);
        width: 0;
        height: 2px;
        background-color: $color-neutral-000;
        transition: width 500ms ease;
      }

      &:hover:not(:focus)::after {
        width: 80px;
      }

      &:focus {
        outline-color: rgb(72, 255, 0);
        outline-offset: 5px;
      }
    }

    &__logo {
      width: 144px;
      height: 24px;

      @include mq(medium) {
        width: 192px;
        height: 32px;
      }
    }
  }
</style>
